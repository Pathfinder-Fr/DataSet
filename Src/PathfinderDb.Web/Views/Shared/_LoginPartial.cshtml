@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(this.T("Account_Status", User.Identity.GetDisplayName()), "Index", "Manage", null, new { title = this.T("Account_Manage") })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@(this.T("Account_Logoff"))</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(this.T("Account_Register"), "Register", "Account", null, new { id = "registerLink" })</li>
        <li>@Html.ActionLink(this.T("Account_Login"), "Login", "Account", null, new { id = "loginLink" })</li>
    </ul>
}